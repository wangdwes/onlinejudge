
public class Solution {
    public void sortColors(int[] A) {
    	int pointer0 = 0, pointer = 0, pointer2 = A.length - 1;
    	while (pointer0 < A.length && pointer2 >= 0) {
    		if (A[pointer] == 2) {int exchange = A[pointer]; A[pointer] = A[pointer2]; A[pointer2] = exchange; pointer2--;}  
    		else if (A[pointer] == 0) ; // swap pointer with pointer1, pointer1++;
    		else pointer++;
    	}
    }
}
